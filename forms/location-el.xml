<?xml version="1.0" encoding="UTF-8"?>
<div xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:tei="http://www.tei-c.org/ns/1.0" xmlns:xf="http://www.w3.org/2002/xforms">
    <fieldset class="well">    
            <!-- Need to work on more complex location element -->
        <xf:repeat ref="tei:location[not(tei:geo)]" id="new-location">
            <xf:trigger appearance="minimal" class="btn remove">
                <xf:label/>
                <xf:delete ev:event="DOMActivate" at="index('new-location')"/>
            </xf:trigger>
            <xi:include href="source-attr.xml"/>
            <xf:textarea ref="instance('i-rec')//tei:place/tei:location[@type='relative']" class="large">
                <xf:label>Location:</xf:label>
            </xf:textarea>
        </xf:repeat>
    </fieldset>
</div>